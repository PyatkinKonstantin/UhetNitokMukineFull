<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrossStich" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">@color/Kreinik007L</item>
        <item name="colorPrimaryVariant">@color/bebebe</item>
        <item name="colorAccent">@color/Kreinik005HL</item>
        <item name="colorOnPrimary">#FF0000</item>
        <item name="recyclerViewStyle">@color/Blue_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Kreinik003V</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/Kreinik008C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="30">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        /<item name="android:colorEdgeEffect">@color/bebebe</item>
    </style>
</resources>