<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ramka"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_itemCurrentThreadNumber"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="B5200"/>

    <FrameLayout
        android:id="@+id/frame_itemCurrentThreadsActivityColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemCurrentThreadNumber"
        app:layout_constraintStart_toEndOf="@+id/tv_itemCurrentThreadNumber" />

    <TextView
        android:id="@+id/tv_itemCurrentThreadsName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/akadem"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemCurrentThreadNumber"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemCurrentThreadsFirm"
        app:layout_constraintStart_toEndOf="@+id/frame_itemCurrentThreadsActivityColor"
        tools:text="Цвет нильской воды" />

    <TextView
        android:id="@+id/tv_itemCurrentThreadsFirm"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemCurrentThreadsLength"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemCurrentThreadsLength"
        tools:text="kreinik" />

    <TextView
        android:id="@+id/tv_itemCurrentThreadsLength"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemCurrentThreadsPasm"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemCurrentThreadsPasm"
        tools:text="555.5" />

    <TextView
        android:id="@+id/tv_itemCurrentThreadsPasm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemCurrentThreadsTotalLength"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemCurrentThreadsTotalLength"
        tools:text="55.5" />

    <TextView
        android:id="@+id/tv_itemCurrentThreadsTotalLength"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemCurrentThreadNumber"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="555.5" />


</androidx.constraintlayout.widget.ConstraintLayout>