<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/footer">

    <EditText
        android:id="@+id/tv_dialogNewCut_Length"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:hint="Длина"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_dialogNewCut_Width"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:ems="10"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:hint="Ширина"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dialogNewCut_Length"
        app:layout_constraintStart_toEndOf="@+id/tv_dialogNewCut_Length" />

    <ImageButton
        android:id="@+id/bt_dialogNewCut_Add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/galochka"
        android:onClick="onClick_dialogNewCut_Add"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dialogNewCut_Width"
        app:layout_constraintStart_toEndOf="@+id/tv_dialogNewCut_Width" />

</androidx.constraintlayout.widget.ConstraintLayout>