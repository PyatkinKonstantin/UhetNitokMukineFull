<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ramka">

    <TextView
        android:id="@+id/tv_itemThreadNumber"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="B5200"
        android:fontFamily="@font/akadem"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <FrameLayout
        android:id="@+id/frame_itemThreadsActivityColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/teal_700"
        app:layout_constraintStart_toEndOf="@+id/tv_itemThreadNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemThreadsActivityName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/akadem"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemThreadsActivityLength"
        app:layout_constraintStart_toEndOf="@+id/frame_itemThreadsActivityColor"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Цвет нильской воды" />

    <TextView
        android:id="@+id/tv_itemThreadsActivityLength"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemThreadsActivityPasm"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemThreadsActivityPasm"
        tools:text="555.5" />

    <TextView
        android:id="@+id/tv_itemThreadsActivityPasm"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/akadem"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="55.5" />

</androidx.constraintlayout.widget.ConstraintLayout>