<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_stitch"
    android:background="@android:drawable/editbox_dropdown_light_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_itemStitchNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/rosalina"
        android:hint="@string/_20"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemStitchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/rosalina"
        android:hint="@string/new_stich"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemStitchNumber"
        app:layout_constraintStart_toEndOf="@+id/tv_itemStitchNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>